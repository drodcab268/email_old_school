# coding: utf-8
# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.box = "debian/bullseye64"
  
  config.vm.provider "virtualbox" do |vb|
    vb.gui = false
    vb.linked_clone = true
  end

  ####################################################################
  # DNS
  ####################################################################

  config.vm.define "dns" do |dns|

    dns.vm.provider "virtualbox" do |vb|
      vb.name = "dns"
      vb.memory = "512"
    end

    dns.vm.hostname = "dns.asir-drc.local"    
    dns.vm.network "private_network", ip: "192.168.56.100", hostname: true
    dns.vm.provision "shell", path: "provision/dns.sh"
  end

  ####################################################################
  # Postfix & Dovecot
  ####################################################################

  config.vm.define "mail" do |mail|
    mail.vm.provider "virtualbox" do |vb|
      vb.name = "mail"
      vb.memory = "512"
    end

    mail.vm.hostname = "mail.asir-drc.local"
    mail.vm.network "private_network", ip: "192.168.56.101", hostname: true
    mail.vm.provision "shell", path: "provision/mail.sh"
  end
end
